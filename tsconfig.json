{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "target": "es6",
      "outDir": "./dist",
      "declaration": true,
      // "paths": {
      //   "@/*": ["./src/*"]
      // },
      "plugins": [
        {
          "name": "next"
        }
      ],
      "strictNullChecks": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      // "stories/**/*.ts",
      // "stories/**/*.tsx",
    ],
    "exclude": ["node_modules"]
  }
